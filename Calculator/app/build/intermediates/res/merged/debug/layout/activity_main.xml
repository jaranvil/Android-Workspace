<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#cccccc">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="#cccccc">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvOutput"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:foregroundGravity="right"
            android:height="50dp"
            android:background="#eeeeee"
            android:gravity="right"
            android:padding="7dp"
            android:textSize="30dp"
            android:layout_marginBottom="15dp"
            android:text="0"
            android:autoText="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOutput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear"
                android:id="@+id/btnClear"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:height="50dp"
                android:width="10dp"
                android:background="#505050"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign"
                android:id="@+id/btnSign"
                android:height="50dp"
                android:width="10dp"
                android:layout_below="@+id/linearLayout"
                android:layout_toRightOf="@+id/linearLayout"
                android:layout_toEndOf="@+id/linearLayout"
                android:background="#505050"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backspace"
                android:id="@+id/btnBackspace"
                android:height="50dp"
                android:width="10dp"
                android:layout_below="@+id/btnSign"
                android:layout_alignLeft="@+id/btnSign"
                android:layout_alignStart="@+id/btnSign"
                android:background="#505050"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plus"
                android:id="@+id/btnPlus"
                android:height="50dp"
                android:width="10dp"
                android:layout_below="@+id/btnSign"
                android:layout_alignLeft="@+id/btnSign"
                android:layout_alignStart="@+id/btnSign"
                android:background="#29A329"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOutput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout2"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num1"
                android:id="@+id/btn1"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:height="50dp"
                android:width="10dp"
                android:background="#505050"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num2"
                android:id="@+id/btn2"
                android:height="50dp"
                android:width="10dp"
                android:layout_below="@+id/linearLayout"
                android:layout_toRightOf="@+id/linearLayout"
                android:layout_toEndOf="@+id/linearLayout"
                android:background="#505050"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num3"
                android:id="@+id/btn3"
                android:height="50dp"
                android:width="10dp"
                android:layout_below="@+id/btn2"
                android:layout_alignLeft="@+id/btn2"
                android:layout_alignStart="@+id/btn2"
                android:background="#505050"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minus"
                android:id="@+id/btnMinus"
                android:height="50dp"
                android:width="10dp"
                android:layout_below="@+id/btn2"
                android:layout_alignLeft="@+id/btn2"
                android:layout_alignStart="@+id/btn2"
                android:background="#29A329"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOutput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout3"
            android:layout_gravity="center_horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num4"
                android:id="@+id/btn4"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:height="50dp"
                android:width="10dp"
                android:background="#505050"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num5"
                android:id="@+id/btn5"
                android:height="50dp"
                android:width="10dp"
                android:layout_below="@+id/linearLayout"
                android:layout_toRightOf="@+id/linearLayout"
                android:layout_toEndOf="@+id/linearLayout"
                android:background="#505050"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num6"
                android:id="@+id/btn6"
                android:height="50dp"
                android:width="10dp"
                android:layout_below="@+id/btn5"
                android:layout_alignLeft="@+id/btn5"
                android:layout_alignStart="@+id/btn5"
                android:background="#505050"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/miltiply"
                android:id="@+id/btnMultiply"
                android:height="50dp"
                android:width="10dp"
                android:layout_below="@+id/btn5"
                android:layout_alignLeft="@+id/btn5"
                android:layout_alignStart="@+id/btn5"
                android:background="#29A329"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOutput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout4"
            android:layout_gravity="center_horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn7"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:height="50dp"
                android:width="10dp"
                android:background="#505050"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:text="@string/num7" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num8"
                android:id="@+id/btn8"
                android:height="50dp"
                android:width="10dp"
                android:layout_below="@+id/linearLayout"
                android:layout_toRightOf="@+id/linearLayout"
                android:layout_toEndOf="@+id/linearLayout"
                android:background="#505050"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn9"
                android:height="50dp"
                android:width="10dp"
                android:layout_below="@+id/btn8"
                android:layout_alignLeft="@+id/btn8"
                android:layout_alignStart="@+id/btn8"
                android:background="#505050"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:text="@string/num9" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/divide"
                android:id="@+id/btnDivide"
                android:height="50dp"
                android:width="10dp"
                android:layout_below="@+id/btn8"
                android:layout_alignLeft="@+id/btn8"
                android:layout_alignStart="@+id/btn8"
                android:background="#29A329"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOutput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout5"
            android:layout_gravity="center_horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button17"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:height="50dp"
                android:width="10dp"
                android:background="#505050"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:visibility="invisible" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn0"
                android:height="50dp"
                android:width="10dp"
                android:layout_below="@+id/linearLayout"
                android:layout_toRightOf="@+id/linearLayout"
                android:layout_toEndOf="@+id/linearLayout"
                android:background="#505050"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:text="@string/num0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button19"
                android:height="50dp"
                android:width="10dp"
                android:layout_below="@+id/btn0"
                android:layout_alignLeft="@+id/btn0"
                android:layout_alignStart="@+id/btn0"
                android:background="#505050"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:visibility="invisible" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/equals"
                android:id="@+id/btnEquals"
                android:height="50dp"
                android:width="10dp"
                android:layout_below="@+id/btn0"
                android:layout_alignLeft="@+id/btn0"
                android:layout_alignStart="@+id/btn0"
                android:background="#336600"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
