<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:background="@drawable/lcars3"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ensign Jared"
        android:id="@+id/tvName"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginTop="50sp"
        android:textSize="30sp"
        android:textColor="#ff9900" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1 of 10"
        android:id="@+id/tvQuestionCount"
        android:layout_gravity="left|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescription"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50sp"
        android:gravity="center"
        android:text="orem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry&apos;s standard dummy text ever since the 1500s, when ..." />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50sp"
        android:gravity="center">

        <Button
            android:layout_width="150sp"
            android:layout_height="60sp"
            android:id="@+id/btn1"
            android:layout_marginRight="50sp"
            android:background="@drawable/button2" />

        <Button
            android:layout_width="150sp"
            android:layout_height="60sp"
            android:id="@+id/btn2"
            android:background="@drawable/button2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:gravity="center" >

        <Button
            android:layout_width="150sp"
            android:layout_height="60sp"
            android:id="@+id/btn3"
            android:layout_marginRight="50sp"
            android:background="@drawable/button2" />

        <Button
            android:layout_width="150sp"
            android:layout_height="60sp"
            android:id="@+id/btn4"
            android:background="@drawable/button2" />
    </LinearLayout>

</LinearLayout>

