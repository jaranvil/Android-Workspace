<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:shrinkColumns="1,2,3"
        android:stretchColumns="1,2,3"
        android:id="@+id/tableLayout"
        android:background="#fff">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bill_total"
                android:id="@+id/billTextView"
                android:layout_column="0"
                android:textColor="#000"
                android:layout_gravity="center|right"
                android:paddingRight="5dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/billEditText"
                android:layout_column="1"
                android:layout_span="3"
                android:inputType="numberDecimal"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10%"
                android:id="@+id/tenTextView"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15%"
                android:id="@+id/fifteenTextView"
                android:layout_column="2"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20%"
                android:id="@+id/twentyTextView"
                android:layout_column="3"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tip"
                android:id="@+id/textView"
                android:layout_column="0"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:paddingRight="5dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tip10EditText"
                android:layout_column="1"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tip15EditText"
                android:layout_column="2"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tip20EditText"
                android:layout_column="3"
                android:layout_weight="1"
                android:focusable="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:id="@+id/textView2"
                android:layout_column="0"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:paddingRight="5dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total10EditText"
                android:layout_column="1"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total15EditText"
                android:layout_column="2"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total20EditText"
                android:layout_column="3"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/custom"
                android:id="@+id/textView3"
                android:layout_column="0"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:paddingRight="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="5dp" />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/customSeekBar"
                android:layout_column="1"
                android:layout_span="2"
                android:max="100"
                android:progress="18"
                android:indeterminate="false"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="5dp"
                android:focusable="false"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="eg. 18%"
                android:id="@+id/customPercent"
                android:layout_column="3"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tip"
                android:id="@+id/textView4"
                android:layout_column="0"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:paddingRight="5dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tipCustomEditText"
                android:layout_column="1"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:id="@+id/textView6"
                android:layout_column="2"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:paddingRight="5dp"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalCustomEditText"
                android:layout_column="3"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
